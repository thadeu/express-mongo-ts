{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@api/*": ["api/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@schemas/*": ["schemas/*"],
      "@types/*": ["types/*"],
      "@setup/*": ["setup/*"]
    }
  },
  "include": ["src", "__tests__"]
}